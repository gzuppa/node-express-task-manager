extends layout

block contenido
    .contenido-principal
        h1 #{nombrePagina}

        if errores
            each error in errores
                .alerta= error.texto

        form.agregar-proyecto(action="/nuevo-proyecto" method="POST")
            .campo
                label(for="nombre") Nombre Proyecto:
                input#nombre(type="text" name="nombre" placeholder="Nombre Proyecto")
            .campo.enviar
                input.boton(type="submit" value="Agregar")