doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/normalize.css")
        link(rel="stylesheet", href="/css/app.css")
        title #{pageName}
    body
        header.bar
            h1 Task Manager
            a(href="#") Close session

        main.container
            aside.task-container
                .panel.add-task
                    a(href="/new-project" class="button") New
                        span +
                .panel.task-list
                    h2 Tasks
                    ul#tasks.tasks
                        if(tasks.length)
                            each task in tasks
                                li
                                    a(href=`/tasks/${task.url}`)= task.name
            block content
            pre= dump(tasks)